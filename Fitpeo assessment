import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import java.time.Duration;

public class FitPeoAutomation {
    public static void main(String[] args) {
        WebDriver driver = new ChromeDriver();

       driver.get("https://www.fitpeo.com");
       
        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));
        wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("some-element-id-on-homepage")));

        WebElement revenueCalculatorLink = driver.findElement(By.linkText("Revenue Calculator"));
        revenueCalculatorLink.click();


        wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("slider-element-id")));

     
        WebElement sliderSection = driver.findElement(By.id("slider-section-id"));
        ((JavascriptExecutor) driver).executeScript("arguments[0].scrollIntoView(true);", sliderSection);

       
        WebElement slider = driver.findElement(By.id("slider-id"));
        ((JavascriptExecutor) driver).executeScript("arguments[0].value=820;", slider);

      
        WebElement bottomTextField = driver.findElement(By.id("bottom-text-field-id"));
        if (!bottomTextField.getAttribute("value").equals("820")) {
            throw new RuntimeException("Slider value not updated correctly");
        }

       
        bottomTextField.clear();
        bottomTextField.sendKeys("560");

        // Validate the slider value is updated to 560
        if (!slider.getAttribute("value").equals("560")) {
            throw new RuntimeException("Text field value not updated correctly");
        }

      
        WebElement cptCheckbox1 = driver.findElement(By.id("cpt-99091"));
        WebElement cptCheckbox2 = driver.findElement(By.id("cpt-99453"));
        WebElement cptCheckbox3 = driver.findElement(By.id("cpt-99454"));
        WebElement cptCheckbox4 = driver.findElement(By.id("cpt-99474"));

        cptCheckbox1.click();
        cptCheckbox2.click();
        cptCheckbox3.click();
        cptCheckbox4.click();

       
        WebElement totalReimbursement = driver.findElement(By.id("total-reimbursement-id"));
        if (!totalReimbursement.getText().equals("$110700")) 
        {
            throw new RuntimeException("Total Recurring Reimbursement value not correct");
        }

        System.out.println("Automation script executed successfully");

        // Close the browser
        driver.quit();
    }
}
